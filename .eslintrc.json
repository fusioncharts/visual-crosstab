{
    "extends": "standard",
    "plugins": [
        "standard",
        "promise"
    ],
    "globals": {
        "FusionCharts": true,
        "MultiCharting": true,
        "FCDataFilterExt": true,
        "performance": true,
        "CrosstabExt": true
    },
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "indent": [
            "error",
            4
        ],
        "no-debugger": [
            "warn"
        ],
        "one-var": [
            "error",
            "always"
        ],
        "no-unused-vars": [
            "warn"
        ]
    }
}
